@page
@model MVC.Controllers.PersonController

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true">
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="~/lib/jquery-ui/css/jquery-ui.css">

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-ui/js/jquery-ui.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" charset="utf-8" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/js/person.js" asp-append-version="true"></script>


<div class="container">
    @* <h1 class="mt-4">Pesquisa de Pessoas</h1>
    <button class="btn btn-primary float-right">Meu Botão</button> *@


    <div class="row">
        <div class="col-6">
            <h1 class="mt-4">Pesquisa de Pessoas</h1>
        </div>
        <div class="col-6 text-right" style="text-align: -webkit-right;">
            <button id="btnCadastroModal" class="btn btn-primary mt-4" data-toggle="modal" data-target="#myModal">
                <i class="fas fa-plus-circle"></i> Cadastrar
            </button>
        </div>
    </div>


    <!-- Seção de Filtros -->
    <div class="card mt-4">
        <div class="card-header">
            Filtros
        </div>
        <div class="card-body">
            <form id="searchForm">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label>ID:</label>
                        <input type="text" id="Id" name="Id" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>Nome:</label>
                        <input type="text" id="Name" name="Name" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>Nome da Mãe:</label>
                        <input type="text" id="MotherName" name="MotherName" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label>RG:</label>
                        <input type="text" id="Rg" name="Rg" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label>CPF:</label>
                        <input type="text" id="Cpf" name="Cpf" class="form-control">
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Home")'">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </button>
                    <div class="d-flex justify-content-between">
                        <div id="loading-spinner" class="d-none">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Carregando...</span>
                            </div>
                        </div>
                        <button type="reset" class="btn btn-secondary me-2">
                            <i class="fas fa-trash"></i> Limpar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    @* <div id="loading-spinner" class="d-none">
    <div class="spinner-border text-primary" role="status" style="width: 300rem; height: 300rem;">
    <span class="visually-hidden">Carregando...</span>
    </div>
    </div> *@
    <br />

    <table id="dataTable" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Nome da Mãe</th>
                <th>CPF</th>
                <th>RG</th>
                <th>Data de Criação</th>
                <!-- Outros cabeçalhos de coluna -->
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastrar Usuário</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Insira seus campos de formulário aqui -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label>ID:</label>
                            <input type="text" id="IdModal" name="IdModal" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label>Nome:</label>
                            <input type="text" id="NameModal" name="NameModal" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label>Nome da Mãe:</label>
                            <input type="text" id="MotherNameModal" name="MotherNameModal" class="form-control">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label>RG:</label>
                            <input type="text" id="RgModal" name="RgModal" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label>CPF:</label>
                            <input type="text" id="CpfModal" name="CpfModal" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="display: block;">
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-secondary close" data-dismiss="modal">
                            <i class="fas fa-times"></i> Fechar
                        </button>
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-primary ml-auto me-2">
                                <i class="fas fa-check"></i> Cadastrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
