    <div id="loading-spinner" class="d-none">
        <div class="spinner-border text-primary" role="status" style="width: 300rem; height: 300rem;">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>
    <br />

    <table id="dataTable" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Nome da Mãe</th>
                <th>CPF</th>
                <th>RG</th>
                <th>Data de Criação</th>
                <!-- Outros cabeçalhos de coluna -->
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>